<form class="sf-gen">
  <div class="form-group">
    <label>Яркий / Тусклый</label>
    <div class="form-fields">
      <input type="number" name="bright" value="{{values.bright}}" min="1" step="1" placeholder="Яркий"/>
      <input type="number" name="dim" value="{{values.dim}}" min="1" step="1" placeholder="Тусклый"/>
    </div>
  </div>

  <div class="form-group">
    <label>Цвет</label>
    <div class="form-fields">
      <input type="color" name="colorPicker" value="{{values.color}}" style="width: 48px;"/>
      <input type="text" name="colorText" value="{{values.color}}" placeholder="#ff8800 | rgb(255,136,0) | 255,136,0"/>
    </div>
  </div>

  <div class="form-group">
    <label>Тип анимации</label>
    <div class="form-fields">
      <select name="anim">
        {{#each animations}}
          <option value="{{this.value}}" {{#if (eq this.value ../values.anim)}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>Скорость</label>
    <div class="form-fields">
      <input type="number" name="speed" value="{{values.speed}}" min="0" max="10" step="1"/>
    </div>
  </div>

  <div class="form-group">
    <label>Интенсивность</label>
    <div class="form-fields">
      <input type="number" name="intensity" value="{{values.intensity}}" min="0" max="10" step="1"/>
    </div>
  </div>

  <div class="form-group">
    <label>Угол</label>
    <div class="form-fields">
      <input type="number" name="angle" value="{{values.angle}}" min="1" max="360" step="1"/>
    </div>
  </div>

  <div class="form-group">
    <label>Прозрачность (0..1)</label>
    <div class="form-fields">
      <input type="number" name="alpha" value="{{values.alpha}}" min="0" max="1" step="0.01"/>
    </div>
  </div>

  <hr/>

  <div class="form-group">
    <label>Результат</label>
    <div class="form-fields">
      <textarea class="sf-output" rows="3" readonly></textarea>
      <button type="button" class="sf-copy"><i class="fas fa-copy"></i> Скопировать</button>
    </div>
  </div>
</form>

